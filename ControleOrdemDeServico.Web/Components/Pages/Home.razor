@page "/"
@using OsService.Web.ApiClients
@using OsService.Web.Components.Shared
@inject NavigationManager Navigation
@inject CustomersApiClient CustomersApi
@inject ServiceOrdersApiClient ServiceOrdersApi

<PageTitle>Dashboard - OS Manager</PageTitle>

<div class="page-header fade-in">
    <h1>
        <i class="bi bi-speedometer2"></i> 
        Dashboard
    </h1>
    <p>Visão geral do sistema de controle de ordens de serviço</p>
</div>

@if (isLoading)
{
    <div class="loading-container">
        <div class="loading-spinner"></div>
        <p class="mt-3 text-muted">Carregando dashboard...</p>
    </div>
}
else
{
    <!-- Statistics Cards -->
    <div class="dashboard-grid fade-in" style="animation-delay: 0.1s;">
        <StatsCard 
            Icon="bi-hourglass-split"
            Value="@ordensEmAndamento.ToString()"
            Label="Em Andamento"
            CssClass="warning" />
        <StatsCard 
            Icon="bi-check-circle-fill"
            Value="@ordensFinalizadas.ToString()"
            Label="Finalizadas"
            CssClass="success" />
        <StatsCard 
            Icon="bi-clipboard-check-fill"
            Value="@totalOrdens.ToString()"
            Label="Total de Ordens"
            CssClass="info" />
    </div>

    <!-- Feature Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 fade-in" style="animation-delay: 0.2s;">
            <div class="feature-card">
                <h3><i class="bi bi-people-fill text-primary"></i> Clientes</h3>
                <p>
                    Você tem <strong>@totalClientes cliente(s)</strong> cadastrado(s) no sistema. 
                    Gerencie informações de contato, histórico e muito mais.
                </p>
                <button class="btn btn-primary btn-custom" @onclick="@(() => Navigation.NavigateTo("/clientes"))">
                    <i class="bi bi-arrow-right-circle btn-icon"></i> Gerenciar Clientes
                </button>
            </div>
        </div>

        <div class="col-md-6 fade-in" style="animation-delay: 0.3s;">
            <div class="feature-card">
                <h3><i class="bi bi-clipboard-check-fill text-success"></i> Ordens de Serviço</h3>
                <p>
                    Controle completo das suas ordens. Acompanhe status, defina preços e 
                    mantenha tudo organizado em um só lugar.
                </p>
                <button class="btn btn-success btn-custom" @onclick="@(() => Navigation.NavigateTo("/ordens-servico"))">
                    <i class="bi bi-arrow-right-circle btn-icon"></i> Ver Ordens
                </button>
            </div>
        </div>
    </div>

    <!-- System Info -->
    <div class="feature-card mt-4 fade-in" style="animation-delay: 0.5s;">
        <h3><i class="bi bi-info-circle-fill text-info"></i> Sobre o Sistema</h3>
        <div class="row">
            <div class="col-md-6">
                <h5>Funcionalidades</h5>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> Cadastro de clientes</li>
                    <li><i class="bi bi-check-circle text-success"></i> Gestão de ordens de serviço</li>
                    <li><i class="bi bi-check-circle text-success"></i> Controle de status</li>
                    <li><i class="bi bi-check-circle text-success"></i> Definição de preços</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h5>Tecnologias</h5>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-primary"></i> .NET 9 Blazor</li>
                    <li><i class="bi bi-check-circle text-primary"></i> ASP.NET Core Web API</li>
                    <li><i class="bi bi-check-circle text-primary"></i> SQL Server LocalDB</li>
                    <li><i class="bi bi-check-circle text-primary"></i> Aspire Orchestration</li>
                </ul>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private int totalClientes = 0;
    private int totalOrdens = 0;
    private int ordensAbertas = 0;
    private int ordensEmAndamento = 0;
    private int ordensFinalizadas = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        isLoading = true;
        
        try
        {
            // Buscar dados dos clientes
            var clientes = await CustomersApi.GetCustomersAsync();
            totalClientes = clientes.Length;

            // Buscar dados das ordens
            var ordens = await ServiceOrdersApi.GetServiceOrdersAsync();
            totalOrdens = ordens.Length;
            ordensAbertas = ordens.Count(o => o.Status == 0);
            ordensEmAndamento = ordens.Count(o => o.Status == 1);
            ordensFinalizadas = ordens.Count(o => o.Status == 2);
        }
        catch (Exception)
        {
            // Em caso de erro, mantém os valores zerados
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshDashboard()
    {
        await LoadDashboardData();
        StateHasChanged();
    }
}
