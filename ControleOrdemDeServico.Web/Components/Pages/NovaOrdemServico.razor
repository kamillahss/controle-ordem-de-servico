@page "/ordens-servico/novo"
@using OsService.Web.ApiClients
@inject ServiceOrdersApiClient ServiceOrdersApi
@inject CustomersApiClient CustomersApi
@inject NavigationManager Navigation

<PageTitle>Nova Ordem de Serviço - Controle de Ordem de Serviço</PageTitle>

<div class="page-header fade-in">
    <div class="container">
        <h1><i class="bi bi-clipboard-plus"></i> Criar Nova Ordem de Serviço</h1>
        <p>Preencha os dados da ordem de serviço</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (clientes == null)
            {
                <div class="loading-container">
                    <div class="loading-spinner"></div>
                    <p class="mt-3 text-muted">Carregando clientes...</p>
                </div>
            }
            else if (!clientes.Any())
            {
                <div class="empty-state fade-in">
                    <i class="bi bi-person-x"></i>
                    <h3>Nenhum cliente cadastrado</h3>
                    <p>É necessário ter pelo menos um cliente cadastrado para criar uma ordem de serviço</p>
                    <button class="btn btn-primary btn-custom" @onclick="@(() => Navigation.NavigateTo("/clientes/novo"))">
                        <i class="bi bi-person-plus btn-icon"></i> Cadastrar Cliente
                    </button>
                </div>
            }
            else
            {
                <div class="custom-form fade-in">
                    <EditForm Model="@request" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger alert-custom" />

                        <div class="mb-4">
                            <label for="cliente" class="form-label">
                                <i class="bi bi-person-fill text-primary"></i> Cliente *
                            </label>
                            <InputSelect id="cliente" 
                                       class="form-select" 
                                       @bind-Value="selectedCustomerId">
                                <option value="">Selecione um cliente...</option>
                                @foreach (var cliente in clientes)
                                {
                                    <option value="@cliente.Id">@cliente.Name</option>
                                }
                            </InputSelect>
                            <small class="text-muted">Selecione o cliente responsável por esta ordem</small>
                        </div>

                        <div class="mb-4">
                            <label for="descricao" class="form-label">
                                <i class="bi bi-card-text text-info"></i> Descrição do Serviço *
                            </label>
                            <InputTextArea id="descricao" 
                                         class="form-control" 
                                         @bind-Value="request.Description" 
                                         rows="5"
                                         placeholder="Descreva detalhadamente o serviço a ser realizado..." />
                            <small class="text-muted">Descreva o serviço que será executado</small>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-custom">
                                <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
                            </div>
                        }

                        @if (successMessage)
                        {
                            <div class="alert alert-success alert-custom">
                                <i class="bi bi-check-circle-fill"></i> Ordem de serviço criada com sucesso! Número: <strong>#@orderNumber</strong>
                            </div>
                        }

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-custom flex-fill" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Criando...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle btn-icon"></i>
                                    <span>Criar Ordem</span>
                                }
                            </button>
                            <button type="button" class="btn btn-secondary btn-custom flex-fill" @onclick="Cancelar" disabled="@isSubmitting">
                                <i class="bi bi-x-circle btn-icon"></i> Cancelar
                            </button>
                        </div>
                    </EditForm>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private CustomerDto[]? clientes;
    private OpenServiceOrderRequest request = new();
    private string selectedCustomerId = string.Empty;
    private bool isSubmitting = false;
    private bool successMessage = false;
    private int orderNumber = 0;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            clientes = await CustomersApi.GetCustomersAsync();
        }
        catch (Exception)
        {
            clientes = [];
        }
    }

    private async Task HandleSubmit()
    {
        if (string.IsNullOrEmpty(selectedCustomerId))
        {
            errorMessage = "Por favor, selecione um cliente.";
            return;
        }

        isSubmitting = true;
        errorMessage = null;
        successMessage = false;

        try
        {
            request.CustomerId = Guid.Parse(selectedCustomerId);
            
            var response = await ServiceOrdersApi.OpenServiceOrderAsync(request);
            orderNumber = response.Number;
            successMessage = true;
            
            await Task.Delay(2000);
            Navigation.NavigateTo("/ordens-servico");
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao criar ordem de serviço: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/ordens-servico");
    }
}
