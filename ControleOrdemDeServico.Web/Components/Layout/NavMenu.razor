<div class="sidebar">
    <div class="sidebar-header">
        <div class="brand">
            <i class="bi bi-gear-fill brand-icon"></i>
            <span class="brand-text">Sistema OS</span>
        </div>
        <button class="sidebar-toggle" @onclick="ToggleSidebar">
            <i class="bi bi-list"></i>
        </button>
    </div>

    <nav class="sidebar-nav @(isCollapsed ? "collapsed" : "")">
        <NavLink class="nav-item" href="" Match="NavLinkMatch.All">
            <i class="bi bi-house-door-fill nav-icon"></i>
            <span class="nav-text">Dashboard</span>
        </NavLink>

        <NavLink class="nav-item" href="clientes">
            <i class="bi bi-people-fill nav-icon"></i>
            <span class="nav-text">Clientes</span>
        </NavLink>

        <NavLink class="nav-item" href="ordens-servico">
            <i class="bi bi-clipboard-check-fill nav-icon"></i>
            <span class="nav-text">Ordens de Serviço</span>
        </NavLink>
    </nav>

    <div class="sidebar-footer">
        <div class="user-info">
            <i class="bi bi-person-circle user-avatar"></i>
            <div class="user-details">
                <span class="user-name">Administrador</span>
                <span class="user-role">v1.0</span>
            </div>
        </div>
    </div>
</div>

<div class="mobile-overlay @(isCollapsed ? "" : "active")" @onclick="ToggleSidebar"></div>

@code {
    private bool isCollapsed = true;

    private void ToggleSidebar()
    {
        isCollapsed = !isCollapsed;
    }
}

