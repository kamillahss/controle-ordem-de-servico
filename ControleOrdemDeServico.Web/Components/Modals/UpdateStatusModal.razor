@using OsService.Web.ApiClients
@inject ServiceOrdersApiClient ServiceOrdersApi
@inject IJSRuntime JS

<div class="modal fade" id="modal-atualizar-status" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h3 class="modal-title">
                    <i class="bi bi-arrow-repeat me-2"></i>
                    Atualizar Status
                </h3>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>

            <div class="modal-body">
                @if (OrdemServico is not null)
                {
                    <div class="mb-3">
                        <p><strong>Ordem:</strong> #@OrdemServico.Number</p>
                        <p><strong>Cliente:</strong> @OrdemServico.CustomerName</p>
                        <p><strong>Status Atual:</strong> <span class="badge bg-secondary">@ObterStatusTexto(OrdemServico.Status)</span></p>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Novo Status *</label>
                        <select class="form-select" @bind="novoStatus">
                            <option value="1">Em Andamento</option>
                            <option value="2">Finalizada</option>
                        </select>
                    </div>

                    @if (novoStatus == 2 && !OrdemServico.Price.HasValue)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Atenção!</strong> Para finalizar a ordem, é necessário definir o preço primeiro.
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(mensagemErro))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @mensagemErro
                        </div>
                    }
                }
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-warning" @onclick="Salvar" disabled="@salvando">
                    @if (salvando)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    <span>Atualizar</span>
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public ServiceOrderDto? OrdemServico { get; set; }
    [Parameter] public EventCallback AoAtualizar { get; set; }

    private int novoStatus = 1;
    private bool salvando = false;
    private string? mensagemErro;

    public async Task Abrir(ServiceOrderDto ordem)
    {
        OrdemServico = ordem;
        novoStatus = ordem.Status == 0 ? 1 : ordem.Status;
        mensagemErro = null;
        StateHasChanged();

        await JS.InvokeVoidAsync("eval", @"
            var modal = new bootstrap.Modal(document.getElementById('modal-atualizar-status'));
            modal.show();
        ");
    }

    private async Task Salvar()
    {
        if (OrdemServico is null) return;

        if (novoStatus == 2 && !OrdemServico.Price.HasValue)
        {
            mensagemErro = "Defina o preço antes de finalizar a ordem.";
            return;
        }

        salvando = true;
        mensagemErro = null;

        try
        {
            await ServiceOrdersApi.UpdateStatusAsync(OrdemServico.Id, novoStatus);

            await Fechar();
            await AoAtualizar.InvokeAsync();
        }
        catch (Exception ex)
        {
            mensagemErro = $"Erro ao atualizar status: {ex.Message}";
        }
        finally
        {
            salvando = false;
        }
    }

    private async Task Fechar()
    {
        await JS.InvokeVoidAsync("eval", @"
            var modal = bootstrap.Modal.getInstance(document.getElementById('modal-atualizar-status'));
            if (modal) modal.hide();
        ");
    }

    private string ObterStatusTexto(int status) => status switch
    {
        0 => "Aberta",
        1 => "Em Andamento",
        2 => "Finalizada",
        _ => "Desconhecido"
    };
}

